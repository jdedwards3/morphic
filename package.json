{
  "name": "@protolith/morphic",
  "version": "0.0.9",
  "description": "Node.js Static Site Generator",
  "main": "./dist/command.js",
  "type": "module",
  "funding": {
    "type": "opencollective",
    "url": "https://opencollective.com/protolith"
  },
  "author": "James Edwards <james@jamesedwards.net> (https://www.jamesedwards.net/)",
  "repository": {
    "type": "git",
    "url": "git://github.com/jdedwards3/morphic.git"
  },
  "keywords": [
    "static-site-generator",
    "static-site",
    "ssg",
    "website",
    "blog",
    "templates",
    "generator",
    "framework",
    "html",
    "ejs",
    "protolith",
    "morphic"
  ],
  "publishConfig": {
    "access": "public"
  },
  "bin": {
    "morphic": "dist/command.js"
  },
  "license": "MIT",
  "scripts": {
    "typeCheck-client": "tsc --allowSyntheticDefaultImports --moduleResolution node --skipLibCheck --noEmit --strict --lib ES2019,ES6,DOM,WebWorker",
    "compile-client": "cross-env-shell babel --no-babelrc --presets=@babel/preset-typescript --extensions '.ts' --no-comments --source-maps --ignore node_modules",
    "typecheck": "tsc --p .",
    "clean": "rimraf dist",
    "compile": "cross-env-shell babel src -d dist --source-maps --extensions '.ts'",
    "build": "npm run clean && npm run compile",
    "build-typecheck": "npm run typecheck && npm run build"
  },
  "devDependencies": {
    "@types/browser-sync": "^2.26.1",
    "@types/cheerio": "^0.22.23",
    "@types/chokidar": "^2.1.3",
    "@types/ejs": "^2.7.0",
    "@types/fs-extra": "^9.0.6",
    "@types/html-minifier": "^3.5.3",
    "@types/markdown-it": "^10.0.3",
    "@types/minimist": "^1.2.1",
    "@types/node": "^11.15.42",
    "@types/sass": "^1.16.0",
    "@types/slash": "^3.0.0",
    "@types/uuid": "^3.4.9",
    "@types/xml": "^1.0.5"
  },
  "dependencies": {
    "@babel/cli": "^7.12.10",
    "@babel/core": "^7.12.10",
    "@babel/preset-env": "^7.12.11",
    "@babel/preset-typescript": "^7.12.7",
    "browser-sync": "^2.26.13",
    "cheerio": "^1.0.0-rc.5",
    "chokidar": "^3.4.3",
    "cross-env": "^7.0.3",
    "ejs": "^2.7.4",
    "fast-glob": "^3.2.4",
    "fs-extra": "^9.0.1",
    "gray-matter": "^4.0.2",
    "highlight.js": "^10.5.0",
    "html-minifier": "^4.0.0",
    "markdown-it": "^12.0.4",
    "minimist": "^1.2.5",
    "rimraf": "^2.7.1",
    "sass": "^1.32.0",
    "simple-git": "^1.132.0",
    "slash": "^3.0.0",
    "typescript": "^3.9.7",
    "uuid": "^8.3.2",
    "xml": "^1.0.1"
  },
  "bugs": {
    "url": "https://github.com/jdedwards3/morphic/issues"
  },
  "homepage": "https://github.com/jdedwards3/morphic"
}
